#include <stdio.h>

int main()
{
        float fahr, celsius;
        int lower, upper, step;

        lower = 0;
        upper = 300;
        step = 20;

        celsius = lower;

        printf("Celsius\tFahr\n");
        while(celsius <= upper) {
                fahr = (celsius/ 5 *9) + 32;
                printf("%3.0f\t%5.2f\n", celsius, fahr);
                celsius = celsius + step;
}

}

